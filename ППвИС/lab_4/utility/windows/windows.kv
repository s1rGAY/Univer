# basic inputs
<TextInputField@MDTextField>:
    size_hint: 0.5, 0.1
    input_type: "text"


<NumberInputField@TextInputField>:
    max_text_length: 3


# windows
<DialogContent>:
#редактор окна для "+"
    orientation: 'vertical'
    spacing: "50dp"
    size_hint_y: None
    height: "500dp"


<SaveDialogContent>:
    height: "50dp"
    path: save_path

    TextInputField:
        id: save_path
        hint_text: "Enter path to file:"


<UploadDialogContent>:
    height: "50dp"
    path: upload_path

    TextInputField:
        id: upload_path
        hint_text: "Enter path to file:"
    
#Done
<InputDialogContent>:
    train_number: input_train_number
    depart_st: input_depart_st
    arriv_st: input_arriv_st
    data_of_departure: input_data_of_depart
    data_of_arrival: input_data_of_arriv
    

    NumberInputField:
        id: input_train_number
        hint_text: 'Enter train number:'

    TextInputField:
        id: input_depart_st
        hint_text: 'Enter departure station'

    TextInputField:
        id: input_arriv_st
        hint_text: 'Enter Arrival station'

    TextInputField:
        id: input_data_of_depart
        hint_text: 'Enter Date and time of departure'

    TextInputField:
        id: input_data_of_arriv
        hint_text: 'Enter Date and time of arrival'

