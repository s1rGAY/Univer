# basic inputs
<TextInputField@MDTextField>:
    size_hint: 0.5, 0.1
    input_type: "text"


<NumberInputField@TextInputField>:
    max_text_length: 3


# windows
<DialogContent>:
#редактор окна для "+"
    orientation: 'vertical'
    spacing: "50dp"
    size_hint_y: None
    height: "500dp"


<SaveDialogContent>:
    height: "50dp"
    path: save_path

    TextInputField:
        id: save_path
        hint_text: "Enter path to file:"


<UploadDialogContent>:
    height: "50dp"
    path: upload_path

    TextInputField:
        id: upload_path
        hint_text: "Enter path to file:"
    

<InputDialogContent>:
    train_number: input_train_number
    depart_st: input_depart_st
    arriv_st: input_arriv_st
    data_of_departure: input_data_of_depart
    data_of_arrival: input_data_of_arriv
    

    NumberInputField:
        id: input_train_number
        hint_text: 'Enter train number:'

    TextInputField:
        id: input_depart_st
        hint_text: 'Enter departure station'

    TextInputField:
        id: input_arriv_st
        hint_text: 'Enter Arrival station'

    TextInputField:
        id: input_data_of_depart
        hint_text: 'Enter Date and time of departure'

    TextInputField:
        id: input_data_of_arriv
        hint_text: 'Enter Date and time of arrival'

#НУЖЕН ФИКС(ФИЛЬТР НЕ ПЕРЕДЕЛЫВАЛ)
<FilterDialogContent>:
    height: "300dp"

    name: filter_name
    group: filter_group
    count_lower: filter_count_lower
    count_upper: filter_count_upper

    TextInputField:
        id: filter_name
        hint_text: 'Enter student`s last name:'

    TextInputField:
        id: filter_group
        hint_text: 'Enter student`s group number:'

    TextInputField:
        id: filter_count_lower
        hint_text: 'Enter student`s lower bound work hours:'
    
    TextInputField:
        id: filter_count_upper
        hint_text: 'Enter student`s upper bound work hours:'



<DeleteDialogContent>:
    height: "600dp"

    train_number: del_train_number
    depart_st: del_depart_st
    arriv_st: del_arriv_st
    data_of_departure: del_data_of_depart
    data_of_arriv: del_data_of_arriv
    time_of_travel: del_time_of_travel

    NumberInputField:
        id: del_train_number
        hint_text: 'Enter train number:'

    TextInputField:
        id: del_depart_st
        hint_text: 'Enter departure station'

    TextInputField:
        id: del_arriv_st
        hint_text: 'Enter Arrival station'

    TextInputField:
        id: del_data_of_depart
        hint_text: 'Enter Date and time of departure'

    TextInputField:
        id: del_data_of_arriv
        hint_text: 'Enter Date and time of arrival'

    TextInputField:
        id: del_time_of_travel
        hint_text: 'Enter time of travel'
